<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xiaotoya.zhihu.mapper.UserMapper">
    <select id="findByUsername" parameterType="String" resultType="com.xiaotoya.zhihu.entities.User">
        select * from zh_user where username=#{username}
    </select>
</mapper>